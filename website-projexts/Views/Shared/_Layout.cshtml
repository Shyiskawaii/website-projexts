<link href="~/Content/home.css" rel="stylesheet" />
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DoAn</title>
</head>
<body>
    <style>
        .custom-navbar {
            background-color: #3b3b3b;
        }
        .navbar-toggle {
            z-index: 3;
        }

        .navbar-default {
            background-color: #ffffff;
            background-image: none;
            margin-bottom: 20px;
        }

        @@media screen and (min-width: 768px) {
            .navbar-brand-centered {
                position: absolute;
                left: 50%;
                display: block;
                width: 160px;
                text-align: center;
            }
        }
        @@media screen and (min-width: 768px) {
            .navbar > .container .navbar-brand-centered,
            .navbar > .container-fluid .navbar-brand-centered {
                margin-left: -80px;
            }
        }
        .login-button {
            background-color: #4AB67E;
            border: none;
            border-radius: 10px;
            width: 120px;
            height: 40px;
            text-align: center;
            color: #000000; 
            font-size: 16px; 
            font-weight: bold;
            cursor: pointer; 
            transition: background-color 0.3s ease; 
        }
         
            .login-button:hover {
                background-color: #368c63; 
            }

        .navbar-nav .nav-link {
            color: #ffffff; 
            text-decoration: underline; 
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link:visited,
            .navbar-nav .nav-link:focus,
            .navbar-nav .nav-link:active {
                text-decoration: none; 
            }
    </style>

    <nav class="navbar navbar-expand-md navbar-light custom-navbar ">
        <div class="container-fluid">
            <div>
                <a class="navbar-brand navbar-brand-centered" href="@Url.Action("Index","Home")">
                    <img style="max-height:50px;" src="~/Content/img/logo.jpeg">
                </a>
                <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            </div>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">Danh Mục</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("ProjectList","Project")">Tìm Kiếm</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Về Chúng Tôi</a></li>
                    <li class="nav-item d-flex">
                        @if (Session["UserID"] == null)
                        {
                            <a class="nav-link" href="@Url.Action("Login","User")"><button class = "login-button">Đăng Nhập</button></a>
                        }
                        else
                        {
                            Html.RenderAction("UserStuff", "Home");
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section>
        @RenderBody()
    </section>

    <footer class="page-footer dark">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h5>Bắt Đầu Với</h5>
                    <ul>
                        <li><a href="#">Trang Chủ</a></li>
                        <li><a href="#">Đăng Ký</a></li>
                        <li><a href="#">Đăng Nhập</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Về Chúng Tôi</h5>
                    <ul>
                        <li><a href="#">Thông Tin</a></li>
                        <li><a href="#">Liên Hệ</a></li>
                        <li><a href="#">Phản Hồi</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Khám Phá</h5>
                    <ul>
                        <li><a href="#">Danh Mục</a></li>
                        <li><a href="#">Tìm Kiếm</a></li>
                        <li><a href="#">Hỗ Trợ</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Điều Khoản</h5>
                    <ul>
                        <li><a href="#">Điều khoản dịch vụ</a></li>
                        <li><a href="#">Điều Khoản Sử Dụng</a></li>
                        <li><a href="#">Chính Sách Bảo Mật</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>
