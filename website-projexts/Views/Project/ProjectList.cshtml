@*model IEnumerable<website_projexts.Models.Projects>*@
@using website_projexts.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Projects>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jquery")

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProjectList</title>
</head>
<body>
    <main class="page laniding-page">

        <section class="clean-block clean-catalog dark">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 card-frame">
                        <div class="card">
                            <img class="card-img-top w-100 d-block fit-cover" style="height: 200px;" src="https://cdn.bootstrapstudio.io/placeholders/1400x800.png">
                            <div class="card-body p-4">
                                <p class="text-primary card-text mb-0">
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </p>
                                <h4 class="card-title">
                                    <strong>
                                        @Html.DisplayFor(modelItem => item.ProjectName)
                                    </strong>
                                </h4>
                                <div class="card-text text-truncate-container">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.ShortDescription)
                                    </p>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">50%</div>
                                </div>
                                <div class="d-flex">
                                    <div class="float-start">
                                        <p class="fw-bold float-start mb-0">Raised</p>
                                        <p class="text-muted mb-0">
                                            @Html.DisplayFor(modelItem => item.Goal)vnd
                                        </p>
                                    </div>
                                    <div class="float-end ms-auto">
                                        <p class="fw-bold mb-0">Goal</p>
                                        <p class="text-muted mb-0">
                                            @Html.DisplayFor(modelItem => item.Raised)vnd
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            ﻿

            Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            <div class="MenuPage">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page=page}))
            </div>
        </section>
    </main>


</body>
</html>
