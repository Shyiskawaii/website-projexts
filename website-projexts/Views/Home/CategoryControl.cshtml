@model IEnumerable<website_projexts.Models.Category>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
@Scripts.Render("~/bundles/modernizr")
@{
    ViewBag.Title = "CategoryControl";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container-fluid" style="margin-bottom: 50px;">
    <div class="row">
        <div class="col-12 col-sm-6 col-md-6">
            <h3 class="text-white mb-4"></h3>
        </div>
        <div class="col-12 col-sm-6 col-md-6 text-end" style="margin-bottom: 30px;">
            <a class="btn btn-primary" role="button" href="@Url.Action("CategoryCreate","Category")">
                <i class="fa fa-plus"></i>&nbsp;Tạo Mới Danh Mục
            </a>
        </div>
    </div>
    <div class="card" id="TableSorterCard-1" style="border-style: none;border-radius: 6.5px;">
        <div class="card-header py-3" style="border-width: 0px;background: rgb(23,25,33);">
            <div class="row table-topper align-items-center">
                <div class="col-12 col-sm-5 col-md-6 text-start" style="margin: 0px;padding: 5px 15px;">
                    <p class="m-0 fw-bold" style="color: rgb(255,255,255);">Danh Sách Các Danh Mục</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive" style="border-top-style: none;background: #171921;">
                    <table class="table table-striped table tablesorter" id="ipi-table">
                        <thead class="thead-dark" style="background: rgb(33,37,48);border-width: 0px;border-color: rgb(0,0,0);border-bottom-color: #21252F;">
                            <tr style="border-style: none;border-color: rgba(255,255,255,0);background: #21252f;">
                                <th class="text-center">Tên Danh Mục</th>
                                <th class="text-center">Mô Tả Danh Mục</th>
                                <th class="text-center">Hình Ảnh Danh Mục</th>
                                <th class="text-center filter-false sorter-false">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody class="text-center" style="border-top-width: 0px;">
                                @foreach (var item in Model)
                                {
                                    <tr style="background: #262a38;">
                                    <td>@item.CategoryName</td>
                                    <td>@item.CategoryDescription</td>
                                    <td>@item.CategoryImage</td>
                                    <td class="text-center align-middle" style="max-height: 60px;height: 60px;">
                                        <a class="btn btnMaterial btn-flat success semicircle" role="button" href="@Url.Action("CategoryEdit","Category",new {id = item.CategoryID})" style="color: rgb(0,197,179);">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a class="btn btnMaterial btn-flat accent btnNoBorders checkboxHover" role="button" style="margin-left: 5px;"
                                           href="@Url.Action("CategoryDelete","Category",new {id = item.CategoryID})"
                                           onclick="return confirm('Bạn có chắc là bạn muốn xóa Người Dùng này không?')">
                                            <i class="fa fa-trash btnNoBorders" style="color: #DC3545;"></i>
                                        </a>
                                    </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>