@model website_projexts.Models.Donation
<link href="~/Content/procreate.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DonationCreate</title>
</head>
<body>

    <section class="clean-block clean-form dark align-self-center" style="padding-top: 60px;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-9 col-xl-9 col-xxl-7">
                    <div class="card shadow-lg o-hidden border-0 my-5">
                        <div class="card-body p-0">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h4 class="text-dark mb-4">Đóng Góp cho @ViewBag.ProjectName</h4>
                                        </div>
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.HiddenFor(model => model.ProjectID)

                                            <div class="mb-3">
                                                @Html.EditorFor(model => model.Donated, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Nhập số tiền muốn đóng góp", @name = "Donated" } })
                                                @Html.ValidationMessageFor(model => model.Donated, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="mb-3">
                                                @Html.EditorFor(model => model.DonationText, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Nhập lời nhắn" , @name = "DonationText" } })
                                                @Html.ValidationMessageFor(model => model.DonationText, "", new { @class = "text-danger" })

                                            </div>
                                            <div class="row mb-3">
                                                <p id="errorMsg" class="text-danger" style="display:none;">Paragraph</p>
                                            </div>
                                                <input class="btn btn-primary d-block btn-user w-100" id="submitBtn" type="submit" value="Đóng Góp">
                                                    
                                            <hr>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
