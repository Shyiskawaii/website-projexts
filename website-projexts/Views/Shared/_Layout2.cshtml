<link href="~/Content/home.css" rel="stylesheet" />
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DoAn</title>
</head>
<body>
    <style>
        .navbar-toggle {
            z-index: 3;
        }

        .navbar-default {
            background-color: #ffffff;
            background-image: none;
            margin-bottom: 20px;
        }

        @@media screen and (min-width: 768px) {
            .navbar-brand-centered {
                position: absolute;
                left: 50%;
                display: block;
                width: 160px;
                text-align: center;
            }
        }

        @@media screen and (min-width: 768px) {
            .navbar > .container .navbar-brand-centered,
            .navbar > .container-fluid .navbar-brand-centered {
                margin-left: -80px;
            }
        }
    </style>

    <nav class="navbar navbar-expand-md navbar-light" style="margin-bottom: 40px">
        <div class="container-fluid">
            <div>
                <a class="navbar-brand navbar-brand-centered" href="@Url.Action("Index","Home")">
                    <img style="max-height:50px;" src="~/Content/img/logo.jpeg">
                </a>
                <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            </div>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("ProjectControl","Home")">Dự Án</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("CategoryControl","Home")">Danh Mục</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("UserControl","Home")">Người Dùng</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item d-flex">
                        @if (Session["UserID"] == null)
                        {
                            <a class="nav-link" href="@Url.Action("Login","User")">Đăng Nhập</a>
                        }
                        else
                        {
                            Html.RenderAction("UserStuff", "Home");
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section>
        @RenderBody()
    </section>

</body>
</html>
